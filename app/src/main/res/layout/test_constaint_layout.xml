<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_default">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/constraint_btn1"
        style="@style/AppButton"
        android:text="@string/btn_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/constraint_btn2"
        style="@style/AppButton"
        android:layout_marginTop="@dimen/padding_default"
        android:text="@string/btn_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_btn1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/constraint_btn3"
        style="@style/AppButton"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_default"
        android:padding="@dimen/padding_default"
        android:text="Button from palette 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_btn2" />

    <Button
        android:id="@+id/constraint_btn4"
        style="@style/AppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_default"
        android:padding="@dimen/padding_default"
        android:text="Button from palette 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_btn3" />

</androidx.constraintlayout.widget.ConstraintLayout>